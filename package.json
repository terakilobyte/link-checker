{
	"name": "link-checker",
	"displayName": "link-checker",
	"description": "Checks links for 200 OK and, in the case of Github, repository staleness.",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
  ],
  "publisher": "link-checker",
  "repository": {
    "url": "https://github.com/terakilobyte/link-checker.git"
  },
	"activationEvents": [
		"onLanguage:markdown",
		"onLanguage:plaintext",
		"onLanguage:restructuredtext",
		"onCommand:extension.link-check"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.link-check",
				"title": "Link Check"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@octokit/rest": "^16.41.1",
		"@types/linkifyjs": "^2.1.3",
		"axios": "^0.19.2",
		"linkifyjs": "^2.1.9"
	}
}
